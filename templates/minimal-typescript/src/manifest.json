{
  "name": "{{ appName }}",
  "short_name": "{{ appName }}",
  "version": "0.1.0",
  "manifest_version": 2,
  "description": "{{ description }}",
  "homepage_url": "",
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "background": {
    "page": "background.html",
    "persistent": false
  },
  "permissions": ["activeTab"],
  "browser_action": {
    "default_title": "Click or press Cmd/Ctrl+Shift+A to launch",
    "name": "Click or press Cmd/Ctrl+Shift+A to launch"
  },
  "commands": {
    "toggle-crx": {
      "suggested_key": {
        "default": "Ctrl+Shift+A",
        "mac": "Command+Shift+A"
      },
      "description": "Toggle"
    }
  },
  "web_accessible_resources": ["assets/*"]
}
